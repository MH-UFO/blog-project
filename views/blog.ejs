<%- include('partials/header.ejs') %>

    <% if (locals.show===true){%>
        <div>
            <div class="blog blog-post">
                <h2 class="post-title">
                    <%= locals.title%>
                </h2>
                <p style="margin-bottom:10px ;" class="post-content">
                    <%=locals.article %>
                </p>
                <hr>
                <p style="margin-top: 5px;">Author: <%=locals.author%>
                </p>
            </div>
        </div>

        <%}else{%>
            <div class="blog blog-post">
                <h1 class="post-title">
                    404
                </h1>
                <p class="post-content">
                    <%= locals.error%>
                </p>
            </div>
            <% } %>


                <%- include('partials/footer.ejs') %>